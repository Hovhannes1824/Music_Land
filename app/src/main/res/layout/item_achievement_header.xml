<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#FFF8E1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/achievementNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Достижения: Рок"
                android:textColor="#5D4037"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/achievementDescTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Прогресс изучения жанра"
                android:textColor="#8D6748"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/achievementDateTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#80FFFFFF"
                android:textSize="12sp"
                android:visibility="gone"/>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/iconContainer"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:visibility="gone">

            <View
                android:id="@+id/iconBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circular_background"/>

            <ImageView
                android:id="@+id/achievementIconImageView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:contentDescription="Иконка достижения"
                android:src="@android:drawable/btn_star_big_on"/>
        </FrameLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView> 